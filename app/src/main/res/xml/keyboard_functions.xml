    <Row>
        <Key
            app:keyOutputText="E"
            app:keyLabel="𝘦"/>
        <Key
            app:keyOutputText="_(1)"
            app:keyIcon="@drawable/ic_key_index1"
            app:keyTopIcon="@drawable/ic_key_index_top"
            app:popupKeyboard="@xml/popup_keyboard_functions_indexes" />
        <Key
            app:keyOutputText="ln()"
            app:keyLabel="ln"
            app:keyTopLabel="lb lg⠀"
            app:popupKeyboardLocationFlags="center"
            app:popupKeyboard="@xml/popup_keyboard_functions_logarithms" />
        <Key
            app:keyOutputText="sin()"
            app:keyLabel="sin"
            app:keyTopLabel="sinh⠀"
            app:popupKeyboardLocationFlags="right"
            app:popupKeyboard="@xml/popup_keyboard_functions_sin" />
        <Key
