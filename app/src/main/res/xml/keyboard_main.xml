        <!--        <Key-->
        <!--            app:codes="6037"-->
        <!--            app:keyLabel="∫xdx"-->
        <!--            app:keyBackground="@drawable/background_switch_key"-->
        <!--            app:isPreviewEnabled="false" />-->
        <Key
            app:codes="6038"
            app:keyLabel="T/F"
            app:keyBackground="@drawable/background_switch_key"
            app:isPreviewEnabled="false" />
    </Row>

    <Row>
        <Key
            app:keyOutputText="()"
            app:keyIcon="@drawable/ic_key_brackets"
            app:keyTopLabel="(  )"
            app:popupKeyboard="@xml/popup_keyboard_main_brackets" />
        <Key
            app:keyOutputText="frac(,)"
            app:keyIcon="@drawable/ic_key_fraction" />
        <Key
            app:keyOutputText="7"
            app:keyLabel="7"
            app:keyBackground="@drawable/background_number_key" />
        <Key
            app:keyOutputText="8"
            app:keyLabel="8"
            app:keyBackground="@drawable/background_number_key" />
        <Key
            app:keyOutputText="9"
            app:keyLabel="9"
            app:keyBackground="@drawable/background_number_key" />
        <Key
            app:keyOutputText=" / "
            app:keyLabel="÷" />
    </Row>

    <Row>
        <Key
            app:keyOutputText="&lt;"
            app:keyLabel="&lt;"
            app:keyTopLabel="≤"
            app:popupKeyboard="@xml/popup_keyboard_main_less" />
        <Key
            app:keyOutputText="&gt;"
            app:keyLabel="&gt;"
            app:keyTopLabel="≥"
            app:popupKeyboard="@xml/popup_keyboard_main_more" />
        <Key
            app:keyOutputText="4"
            app:keyLabel="4"
            app:keyBackground="@drawable/background_number_key" />
        <Key
            app:keyOutputText="5"
            app:keyLabel="5"
            app:keyBackground="@drawable/background_number_key" />
        <Key
            app:keyOutputText="6"
            app:keyLabel="6"
            app:keyBackground="@drawable/background_number_key" />
        <Key
            app:keyOutputText="*"
            app:keyLabel="×"/>
    </Row>

    <Row>
        <Key
            app:keyOutputText="^2"
            app:keyIcon="@drawable/ic_key_pow2"
            app:keyTopIcon="@drawable/ic_key_pow_top"
            app:popupKeyboard="@xml/popup_keyboard_main_power" />
        <Key
            app:keyOutputText="sqrt()"
            app:keyIcon="@drawable/ic_key_root2"
            app:keyTopIcon="@drawable/ic_key_root_top"
            app:popupKeyboard="@xml/popup_keyboard_main_root" />
        <Key
            app:keyOutputText="1"
            app:keyLabel="1"
            app:keyBackground="@drawable/background_number_key" />
        <Key
            app:keyOutputText="2"
            app:keyLabel="2"
            app:keyBackground="@drawable/background_number_key" />
        <Key
            app:keyOutputText="3"
            app:keyLabel="3"
            app:keyBackground="@drawable/background_number_key" />
        <Key
            app:keyOutputText="-"
            app:keyLabel="−" />
    </Row>

    <Row>
        <Key
            app:keyOutputText="x"
            app:keyLabel="x"
            app:keyTopLabel="yz"
            app:popupKeyboard="@xml/popup_keyboard_main_xyz" />
        <Key
            app:keyOutputText="%"
            app:keyLabel="%" />
        <Key
            app:keyOutputText="0"
            app:keyLabel="0"
            app:keyBackground="@drawable/background_number_key" />
        <!--        TODO: remove when derivatives and min/max functions will be better implemented -->
        <Key
            app:keyOutputText="."
            app:keyLabel="." />
        <!--        TODO: uncomment when derivatives and min/max functions will be better implemented -->
