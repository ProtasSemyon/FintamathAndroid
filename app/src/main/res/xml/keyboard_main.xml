        <!--            app:keyOutputText="."-->
        <!--            app:keyLabel="."-->
        <!--            app:keyTopLabel=","-->
        <!--            app:popupKeyboardLocationFlags="right"-->
        <!--            app:popupKeyboard="@xml/popup_keyboard_main_point"/>-->
        <Key
            app:keyOutputText="="
            app:keyLabel="="
            app:keyTopLabel="≠"
            app:popupKeyboard="@xml/popup_keyboard_main_equal" />
        <Key
            app:keyOutputText="+"
            app:keyLabel="+" />
    </Row>

</Keyboard>
