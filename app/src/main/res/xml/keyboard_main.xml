<?xml version="1.0" encoding="utf-8"?>
<Keyboard xmlns:app="http://schemas.android.com/apk/res-auto"
    app:keyWidth="@dimen/keyboard_key_width"
    app:keyHeight="@dimen/keyboard_key_height">

    <Row>
        <Key
            app:codes="5997"
            app:keyLabel="ac"
            app:keyBackground="@drawable/background_control_key"
            app:isPreviewEnabled="false" />
        <Key
            app:codes="6033"
            app:keyIcon="@drawable/ic_undo"
            app:keyBackground="@drawable/background_control_key"
            app:isRepeatable="true"
            app:isPreviewEnabled="false" />
        <Key
            app:codes="6034"
            app:keyIcon="@drawable/ic_redo"
            app:keyBackground="@drawable/background_control_key"
            app:isRepeatable="true"
            app:isPreviewEnabled="false" />
        <Key
            app:codes="5998"
            app:keyIcon="@drawable/ic_arrow_left"
            app:keyBackground="@drawable/background_control_key"
            app:isRepeatable="true"
            app:isPreviewEnabled="false" />
        <Key
            app:codes="5999"
            app:keyIcon="@drawable/ic_arrow_right"
            app:keyBackground="@drawable/background_control_key"
            app:isRepeatable="true"
            app:isPreviewEnabled="false" />
        <Key
            app:codes="5996"
            app:keyLabel="⌫"
            app:keyBackground="@drawable/background_control_key"
            app:isRepeatable="true"
            app:isPreviewEnabled="false" />
    </Row>

    <Row>
        <Key
            app:codes="6035"
            app:keyLabel="+/−"
            app:keyBackground="@drawable/background_switch_enabled_key"
            app:isPreviewEnabled="false" />
        <Key
            app:codes="6000"
            app:keyLabel="abc"
            app:keyBackground="@drawable/background_switch_key"
            app:isPreviewEnabled="false" />
        <Key
            app:codes="6001"
            app:keyLabel="f(x)"
            app:keyBackground="@drawable/background_switch_key"
            app:isPreviewEnabled="false" />
